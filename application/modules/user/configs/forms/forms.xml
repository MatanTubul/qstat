<?xml version="1.0" encoding="UTF-8"?>
<forms>
	<login>
		<action>/user/authentication/login</action>
		<method>post</method>
		<id>loginForm</id>
		<name>loginForm</name>
		<elements>
			<username>
				<type>text</type>
				<options>
					<label>LBL_USERNAME</label>
					<size>40</size>
					<validators>
						<notempty>
							<validator>NotEmpty</validator>
							<options>
								<messages>
									<isEmpty>Your username is required</isEmpty>
								</messages>
							</options>
						</notempty>
						<DbRecordExists>
							<validator>Db_RecordExists</validator>
							<options>
								<table>users</table>
								<field>username</field>
								<exclude>
									<field>is_deleted</field>
									<value>1</value>
								</exclude>
							</options>
						</DbRecordExists>
					</validators>
					<filters>
						<trim>
							<filter>StringTrim</filter>
						</trim>
					</filters>
					<class></class>
					<required>true</required>
				</options>
			</username>
			<password>
				<type>password</type>
				<options>
					<label>LBL_PASSWORD</label>
					<size>40</size>
					<validators>
						<notempty>
							<validator>NotEmpty</validator>
							<options>
								<messages>
									<isEmpty>Your password is required</isEmpty>
								</messages>
							</options>
						</notempty>
					</validators>
					<filters>
						<trim>
							<filter>StringTrim</filter>
						</trim>
					</filters>
					<class></class>
					<required>true</required>
				</options>
			</password>
		</elements>
	</login>
